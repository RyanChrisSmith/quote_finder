<h2>Search results for: '<%= params[:query] %>'</h2>
<br>
<p>Total Count: <%= @total %></p>
<br>
<p>Top 10 quotes:</p>
<ol><% @quotes.each do |quote| %>
  <li><p>Quote - "<%= quote.content %>"</p></li>
  <p><strong>Author - <%= link_to quote.author, author_index_path(name: quote.author) %></strong></p>
  <p>Categories: <% quote.categories.each do |category| %> </p>
    <p>* <%= category %></p>
  <% end %>
<% end %></ol>


